						Iterator <BookHistory> it=b.iterator();
						while(it.hasNext())
						{
							BookHistory bh=it.next();
							Book bo=bh.getB();
							int bid=bo.getBookid();
							String title=bo.getTitle();
							String author=bo.getAuthor();
							String pub=bo.getPublisher();
							String uname=bh.getU();
							String id=bh.getI();
							String rd=bh.getR();
				%>
							<tr>
